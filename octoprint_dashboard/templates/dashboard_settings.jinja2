                <div class="controls">
                    <input type="number" min="0" max="50" step="1" class="input-mini text-left"
                        data-bind="value: settingsViewModel.settings.plugins.dashboard.targetTempDeviation">
                    <span class="add-on">&deg;C</span>
                </div>
            </div>
