<form class="form-horizontal">

    <div class="tabbable">
        <!-- Only required for left/right tabs -->
        <ul class="nav nav-tabs">
            <li class="active"><a href="#tabWidgetVisibility" data-toggle="tab">Widgets</a></li>
            <li><a href="#tabSettings" data-toggle="tab">Other Settings</a></li>
        </ul>

        <div class="tab-content">
            <!-- WIDGET VISIBILITY TAB -->
            <!-- Please note: adding new widget visibility settings is a bit different now. -->
            <!-- This is generated using the widgetsSettings array (in dashboar.js). please use that to add new widget settings -->
            <!-- Other settings can still be added normaly below-->
            <div class="tab-pane active" id="tabWidgetVisibility">
                <div class="row-fluid">
                    <div class="span7">
                        <h5>{{ _('Enabled Widgets') }}</h5>
                    </div>
                    <div class="span2" style="text-align: right;">
                        <h5>Show in Fullscreen</h5>
                    </div>
                    <div class="span1">
                        <h5>{{ _('Options') }}</h5>
                    </div>
                    <div class="span1">
                        <h5>{{ _('Disable') }}</h5>
                    </div>
                </div>
                <div data-bind="foreach: widgetsSettings">
                    <div class="row-fluid dashboardSettingsWidgetsRow" data-bind="visible: setting()">
                        <span class="span8" data-bind="text: gettext(title)"></span>
                        <div class="span1" style="text-align: right;"
                            data-bind="if: typeof enableInFull != 'undefined'">
                            <div style="display: inline-block; padding-right: 10px;">
                                <i class="fa fa-expand"></i>
                            </div>
                            <input type="checkbox" data-bind="checked: enableInFull">
                        </div>
                        <button title="Widget options" class="btn span1" role="button"
                            data-bind="disable: typeof settings == 'undefined' && typeof settingsId == 'undefined', css: { 'btn-primary': typeof settings != 'undefined' || typeof settingsId != 'undefined' }, attr: { href: typeof settings != 'undefined' ? '#dashboardWidgetModal' + $index() : typeof settingsId != 'undefined' ? settingsId : '', 'data-toggle': typeof settings != 'undefined' || typeof settingsId != 'undefined' ? 'modal' : '' }"><i
                                class="fa fa-cog"></i></button>
                        <button title="Disable widget" class="btn btn-warning span1"
                            data-bind="click: function(){return $parent.disableWidget($data) }"><i
                                class="fa fa-arrow-down"></i></button>
                    </div>
                    <!-- Modal -->
                    <div style="width: 0px; height: 0px;" data-bind="if: typeof settings != 'undefined'">
                        <div data-bind="attr: { id: 'dashboardWidgetModal' + $index() }" class="modal hide fade"
                            tabindex="-1" role="dialog" aria-hidden="true">
                            <div class="modal-header">
                                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                                <h3>{{ _('Edit widget settings') }}</h3>
                            </div>
                            <div class="modal-body form-horizontal" data-bind="foreach: settings">
                                <!-- ko if: type == 'checkbox' -->
                                <label class="checkbox">
                                    <span data-bind="text: gettext(title)"></span>
                                    <input type="checkbox" data-bind="checked: setting">
                                </label>
                                <!-- /ko -->
                                <!-- ko if: type == 'radio' -->
                                <div class="control-group">
                                    <label class="control-label" data-bind="text: gettext(title)"></label>
                                    <div class="controls" data-bind="foreach: options">
                                        <label class="radio">
                                            <input type="radio"
                                                data-bind="checked: $parent.setting, attr: {value: value}">
                                            <span data-bind="text: gettext(name)"></span>
                                        </label>
                                    </div>
                                </div>
                                <!-- /ko -->
                                <!-- ko if: type == 'title' -->
                                <span data-bind="text: gettext(title)"></span>
                                <!-- /ko -->
                            </div>
                            <div class="modal-footer">
                                <button class="btn btn-primary" data-dismiss="modal" aria-hidden="true">Done</button>
                            </div>
                        </div>
                    </div>
                </div>
                <br>
                <div class="row-fluid">
                    <div class="span9">
                        <h5>{{ _('Disabled Widgets') }}</h5>
                    </div>
                    <div class="span1">
                        <h5>{{ _('Options') }}</h5>
                    </div>
                    <div class="span1">
                        <h5>{{ _('Enable') }}</h5>
                    </div>
                </div>
                <div data-bind="foreach: widgetsSettings">
                    <div class="row-fluid dashboardSettingsWidgetsRow" data-bind="visible: !(setting())">
                        <span class="span9" data-bind="text: gettext(title)"></span>
                        <button title="Widget options" class="btn span1"
                            data-bind="disable: typeof settings == 'undefined' && typeof settingsId == 'undefined', css: { 'btn-primary': typeof settings != 'undefined' || typeof settingsId != 'undefined' }, attr: { href: typeof settings != 'undefined' ? '#dashboardWidgetModal' + $index() : typeof settingsId != 'undefined' ? settingsId : '', 'data-toggle': typeof settings != 'undefined' || typeof settingsId != 'undefined' ? 'modal' : '' }"><i
                                class="fa fa-cog"></i></button>
                        <button title="Enable widget" class="btn btn-success span1"
                            data-bind="click: function(){return $parent.enableWidget($data) }"><i
                                class="fa fa-arrow-up"></i></button>
                    </div>
                </div>
            </div>

            <!-- widget settings modals -->

            <!-- MODAL TEMPLATE -->
            <!-- <div id="THE_ID_OF_THE_MODAL" class="modal hide fade" tabindex="-1" role="dialog"
                aria-hidden="true">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                    <h3>{{ _('THE_TITLE_OF_THE_MODAL') }}</h3>
                </div>
                <div class="modal-body form-horizontal">
                    THE_ACTUAL_SETTINGS
                </div>
                <div class="modal-footer">
                    <button class="btn btn-primary" data-dismiss="modal" aria-hidden="true">Done</button>
                </div>
            </div> -->

            <!-- COMMAND WIDGET Modal -->
            <div id="dashboardCommandSettingsModal" class="modal hide fade" tabindex="-1" role="dialog"
                aria-hidden="true">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                    <h3>{{ _('Command widget settings') }}</h3>
                </div>
                <div class="modal-body form-horizontal">
                    <div class="control-group">
                        <span class="label label-info">Info:</span> The stdout output of each shell command below will
                        be
                        displayed in a separate widget.</span><br />
                        <span class="label label-info">Info:</span> Editing command widgets requires dashboard admin
                        permission</span><br />
                        <span class="label label-warning">Warning:</span> The command(s) will be executed with the
                        privileges
                        of the octoprint server, so think twice...</span><br />
                        <div class="row-fluid" data-bind="visible: admin">
                            <div class="span3">
                                <h5>{{ _('Icon') }}</h5>
                            </div>
                            <div class="span5">
                                <h5>{{ _('Name') }}</h5>
                            </div>
                            <div class="span2">
                                <h5>{{ _('Enable') }}</h5>
                            </div>
                            <div class="span2">
                                <h5>{{ _('Actions') }}</h5>
                            </div>
                        </div>
                        <div
                            data-bind="foreach: settingsViewModel.settings.plugins.dashboard.commandWidgetArray, visible: admin">
                            <div class="row-fluid" style="margin-bottom: 5px">
                                <div class="span3">
                                    <select class="input-medium" data-bind="value: icon" style="width: 100%;">
                                        <option value="command-icon.png">Command</option>
                                        <option value="sensor-icon.png">Sensor</option>
                                        <option value="ambient-sensor-icon.png">Ambient</option>
                                        <option value="light-icon.png">Light</option>
                                        <option value="flash-icon.png">Power</option>
                                        <option value="cpu-icon.png">CPU</option>
                                        <option value="ram-icon.png">Memory</option>
                                        <option value="hdd-icon.png">Storage</option>
                                        <option value="filament-icon.png">Filament</option>
                                    </select>
                                </div>
                                <div class="span5">
                                    <input type="text" class="span12" data-bind="value: name">
                                </div>
                                <div class="span2">
                                    <input type="checkbox" title="Enable Command Widget" data-bind="checked: enabled">
                                </div>
                                <div class="span1">
                                    <a data-bind="attr: { href: '#dashboardCommandWidgetModal' + $index() }"
                                        role="button" class="btn btn-primary" data-toggle="modal"><i
                                            class="fa fa-pencil"></i></a>
                                </div>
                                <div class="span1">
                                    <button title="Remove Command Widget" class="btn btn-danger"
                                        data-bind="click: $parent.removeCommandWidget, attr: { 'title': 'Remove Command Widget' }"><i
                                            class="fa fa-trash-o"></i></button>
                                </div>

                                <!-- Modal -->
                                <div data-bind="attr: { id: 'dashboardCommandWidgetModal' + $index() }"
                                    class="modal hide fade" tabindex="-1" role="dialog" aria-hidden="true">
                                    <div class="modal-header">
                                        <button type="button" class="close" data-dismiss="modal"
                                            aria-hidden="true">×</button>
                                        <h3>{{ _('Edit Command Widget') }} "<span data-bind="text: name"></span>"</h3>
                                    </div>
                                    <div class="modal-body">
                                        <div class="row-fluid">
                                            <div class="span2">
                                                <label>{{ _('Icon') }}</label>
                                            </div>
                                            <div class="span10">
                                                <select class="input-medium" data-bind="value: icon"
                                                    style="width: 100%;">
                                                    <option value="command-icon.png">Command</option>
                                                    <option value="sensor-icon.png">Sensor</option>
                                                    <option value="ambient-sensor-icon.png">Ambient</option>
                                                    <option value="light-icon.png">Light</option>
                                                    <option value="flash-icon.png">Power</option>
                                                    <option value="cpu-icon.png">CPU</option>
                                                    <option value="ram-icon.png">Memory</option>
                                                    <option value="hdd-icon.png">Storage</option>
                                                    <option value="filament-icon.png">Filament</option>
                                                </select>
                                            </div>
                                        </div>
                                        <div class="row-fluid">
                                            <div class="span2">
                                                <label>{{ _('Name') }}</label>
                                            </div>
                                            <div class="span10">
                                                <input type="text" class="span9" data-bind="value: name"
                                                    style="width: 100%;">
                                            </div>
                                        </div>
                                        <div class="row-fluid">
                                            <div class="span2">
                                                <label>{{ _('Command') }}</label>
                                            </div>
                                            <div class="span9">
                                                <input type="text" class="span9" data-bind="value: command"
                                                    style="width: 100%;">
                                            </div>
                                            <div class="span1" style="margin-left: 1%;">
                                                <button title="Test Command Widget" class="btn btn-primary"
                                                    data-bind="click: $parent.testCommandWidget.bind(command())">
                                                    <i class="fa fa-flask"></i>
                                                </button>
                                            </div>
                                        </div>
                                        <div class="row-fluid">
                                            <div class="span2">
                                                <label>{{ _('Enable Command') }}</label>
                                            </div>
                                            <div class="span10">
                                                <input type="checkbox" title="Enable Command Widget"
                                                    data-bind="checked: enabled">
                                            </div>
                                        </div>
                                        <div class="row-fluid">
                                            <div class="span2">
                                                <label>{{ _('Command Interval (Seconds)') }}</label>
                                            </div>
                                            <div class="span10">
                                                <input type="number" min="0" max="3600" step="0.1"
                                                    data-bind="value: interval" class="span9" style="width: 100%;">
                                            </div>
                                        </div>
                                    </div>

                                    <div class="modal-footer">
                                        <button title="Remove Command Widget" class="btn btn-danger"
                                            data-bind="click: $parent.removeCommandWidget" data-dismiss="modal">
                                            <i class="fa fa-trash-o"></i> Remove Command Widget</button>
                                        <button class="btn btn-primary" data-dismiss="modal"
                                            aria-hidden="true">Done</button>
                                    </div>
                                </div>

                            </div>
                        </div>
                        <div class="row-fluid">
                            <div class="offset10 span2">
                                <button title="Add Command Widget" class="btn btn-primary"
                                    data-bind="click: addCommandWidget, visible: admin"><i
                                        class="fa fa-plus"></i></button>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-primary" data-dismiss="modal" aria-hidden="true">Done</button>
                </div>
            </div>


            <!-- System Info Modal -->
            <div id="dashboardSysInfoSettingsModal" class="modal hide fade" tabindex="-1" role="dialog"
                aria-hidden="true">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                    <h3>{{ _('System Info settings') }}</h3>
                </div>
                <div class="modal-body form-horizontal">
                    <span class="label label-info">Info:</span> The CPU temp indicator will be set to orange above the
                    warning threshold and red above the critical threshold.</span><br />
                    <div class="control-group">
                        <label class="control-label">{{ _('CPU warning threshold:')}}</label>
                        <div class="controls">
                            <input type="number" min="0" max="200" step="1" class="input-mini text-left"
                                data-bind="value: settingsViewModel.settings.plugins.dashboard.cpuTempWarningThreshold">
                            <span class="add-on">&deg;C</span>
                        </div>
                        <label class="control-label">{{ _('CPU critical threshold:')}}</label>
                        <div class="controls">
                            <input type="number" min="0" max="200" step="1" class="input-mini text-left"
                                data-bind="value: settingsViewModel.settings.plugins.dashboard.cpuTempCriticalThreshold">
                            <span class="add-on">&deg;C</span>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-primary" data-dismiss="modal" aria-hidden="true">Done</button>
                </div>
            </div>

            <!-- WEBCAM Modal -->
            <div id="dashboardWebcamSettingsModal" class="modal hide fade" tabindex="-1" role="dialog"
                aria-hidden="true">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                    <h3>{{ _('Webcam settings') }}</h3>
                </div>
                <div class="modal-body form-horizontal">
                    <div class="control-group">
                        <div>
                            <label class="checkbox">{{ _('Disable nonce for Octoprint webcam') }}
                                <input type="checkbox"
                                    data-bind="checked: settingsViewModel.settings.plugins.dashboard.disableWebcamNonce">
                            </label>
                        </div>
                        <br />
                        <div>
                            <label class="checkbox">{{ _('Enable Dashboard Multi Webcams') }}
                                <input type="checkbox"
                                    data-bind="checked: settingsViewModel.settings.plugins.dashboard.enableDashMultiCam">
                            </label>
                        </div>
                        <span class="label label-info">Info:</span> The following webcams will be displayed instead of
                        the octoprint webcam if multi webcam is enabled.
                        <br />
                        <div class="control-group">
                            <label class="control-label">Default webcam</label>
                            <div class="controls">
                                <select
                                    data-bind="foreach: settingsViewModel.settings.plugins.dashboard._webcamArray, value: settingsViewModel.settings.plugins.dashboard.defaultWebcam">
                                    <option data-bind="value: $index, text: name"></option>
                                </select>
                            </div>
                        </div>
                        <div class="row-fluid">
                            <div class="span2">
                                <h5>{{ _('Name') }}</h5>
                            </div>
                            <div class="span8">
                                <h5>{{ _('URL') }}</h5>
                            </div>
                            <div class="span2">
                                <h5>{{ _('Action') }}</h5>
                            </div>
                        </div>
                        <div data-bind="foreach: settingsViewModel.settings.plugins.dashboard._webcamArray">
                            <div class="row-fluid" style="margin-bottom: 5px">
                                <div class="span2">
                                    <input type="text" class="span12" data-bind="value: name" readonly>
                                </div>
                                <div class="input-append span8">
                                    <input type="text" class="span12" data-bind="value: url" readonly>
                                </div>
                                <div class="span1">
                                    <a data-bind="attr: { href: '#dashboardWebcamModal' + $index() }" role="button"
                                        class="btn btn-primary" data-toggle="modal"><i class="fa fa-pencil"></i></a>
                                </div>
                                <div class="span1">
                                    <button title="Remove Webcam" class="btn btn-danger"
                                        data-bind="click: $parent.removeWebCam, attr: { 'title': 'Remove WebCam' }"><i
                                            class="fa fa-trash-o"></i></button>
                                </div>
                                <!-- Modal -->
                                <div data-bind="attr: { id: 'dashboardWebcamModal' + $index() }" class="modal hide fade"
                                    tabindex="-1" role="dialog" aria-hidden="true">
                                    <div class="modal-header">
                                        <button type="button" class="close" data-dismiss="modal"
                                            aria-hidden="true">×</button>
                                        <h3>{{ _('Edit webcam profile') }} "<span data-bind="text: name"></span>"</h3>
                                    </div>
                                    <div class="modal-body">
                                        <div class="row-fluid">
                                            <label class="span2">{{ _('Name') }}</label>
                                            <input type="text" class="span10" data-bind="value: name">
                                        </div>
                                        <div class="row-fluid">
                                            <label class="span2">{{ _('URL') }}</label>
                                            <input class="span10" type="text" class="span" data-bind="value: url">
                                        </div>
                                        <label class="checkbox">{{ _('Flip webcam vertically') }}
                                            <input type="checkbox" title="Flip webcam Vertically"
                                                data-bind="checked: flipV">
                                        </label>
                                        <label class="checkbox">{{ _('Flip webcam Horizontally') }}
                                            <input type="checkbox" title="Flip webcam Horizontally"
                                                data-bind="checked: flipH">
                                        </label>
                                        <label class="checkbox">{{ _('Rotate webcam 90 degrees counter clockwise') }}
                                            <input type="checkbox" title="Rotate webcam 90 degrees counter clockwise"
                                                data-bind="checked: rotate">
                                        </label>
                                        <label class="checkbox">{{ _('Disable nonce for webcam') }}
                                            <input type="checkbox" data-bind="checked: disableNonce">
                                        </label>
                                        <div class="control-group" title="Aspect ratio of the webcam stream">
                                            <label class="control-label">Stream aspect
                                                ratio</label>
                                            <div class="controls">
                                                <select data-bind="value: streamRatio">
                                                    <option value="16:9">16:9</option>
                                                    <option value="4:3">4:3</option>
                                                </select>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="modal-footer">
                                        <button title="Remove Webcam" class="btn btn-danger"
                                            data-bind="click: $parent.removeWebCam" data-dismiss="modal">
                                            <i class="fa fa-trash-o"></i> Remove Webcam</button>
                                        <button class="btn btn-primary" data-dismiss="modal"
                                            aria-hidden="true">Done</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row-fluid">
                            <div class="offset11 span1">
                                <button title="Add Webcam" class="btn btn-primary" data-bind="click: addWebCam"><i
                                        class="fa fa-plus"></i></button>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-primary" data-dismiss="modal" aria-hidden="true">Done</button>
                </div>
            </div>

            <!-- TEMPERATURE GAUGE Modal -->
            <div id="dashboardTempGaugeSettingsModal" class="modal hide fade" tabindex="-1" role="dialog"
                aria-hidden="true">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                    <h3>{{ _('Temperature Gauge Settings') }}</h3>
                </div>
                <div class="modal-body form-horizontal">
                    <div class="control-group">
                        <span class="label label-info">Info:</span> The max range of the respective temp gauge:
                        </span><br />
                        <br />
                        <label class="control-label">{{ _('Hotend Max Temp:')}}</label>
                        <div class="controls">
                            <input type="number" min="0" max="300" step="10" class="input-mini text-left"
                                data-bind="value: settingsViewModel.settings.plugins.dashboard.hotendTempMax">
                            <span class="add-on">&deg;C</span>
                        </div>
                        <label class="control-label">{{ _('Bed Max Temp:')}}</label>
                        <div class="controls">
                            <input type="number" min="0" max="300" step="10" class="input-mini text-left"
                                data-bind="value: settingsViewModel.settings.plugins.dashboard.bedTempMax">
                            <span class="add-on">&deg;C</span>
                        </div>
                        <label class="control-label">{{ _('Chamber Max Temp:')}}</label>
                        <div class="controls">
                            <input type="number" min="0" max="300" step="10" class="input-mini text-left"
                                data-bind="value: settingsViewModel.settings.plugins.dashboard.chamberTempMax">
                            <span class="add-on">&deg;C</span>
                        </div>
                        <div>
                            <label
                                class="checkbox">{{ _('Hide hotend(s) when target temp is 0 (Useful for dual hotends)') }}
                                <input type="checkbox"
                                    data-bind="checked: settingsViewModel.settings.plugins.dashboard.hideHotend">
                            </label>
                        </div>
                        <div>
                            <label class="checkbox">{{ _('Enable Temp Gauge Colors') }}
                                <input type="checkbox"
                                    data-bind="checked: settingsViewModel.settings.plugins.dashboard.showTempGaugeColors">
                            </label>
                        </div>
                        <span class="label label-info">Info:</span> Temp gauges will be blue below the temp deviation of
                        the
                        target temp, red if it goes above and green between the two. </span><br />
                        <label class="control-label">{{ _('Target temp deviation:')}}</label>
                        <div class="controls">
                            <input type="number" min="0" max="50" step="1" class="input-mini text-left"
                                data-bind="value: settingsViewModel.settings.plugins.dashboard.targetTempDeviation">
                            <span class="add-on">&deg;C</span>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-primary" data-dismiss="modal" aria-hidden="true">Done</button>
                </div>
            </div>

            <!-- normal settings below -->

            <!-- SETTINGS TAB -->
            <div class="tab-pane" id="tabSettings">
                <div class="control-group">
                    <div>
                        <label class="checkbox">{{ _('Use themeify color for gagues and text') }}
                            <input type="checkbox"
                                data-bind="checked: settingsViewModel.settings.plugins.dashboard.useThemeifyColor">
                        </label>
                    </div>
                    <div>
                        <label class="checkbox">{{ _('Use theme colors in fullscreen mode') }}
                            <input type="checkbox"
                                data-bind="checked: settingsViewModel.settings.plugins.dashboard.fullscreenUseThemeColors">
                        </label>
                    </div>
                    <div>
                        <label class="checkbox">{{ _('Supress DLP warning messages') }}
                            <input type="checkbox"
                                data-bind="checked: settingsViewModel.settings.plugins.dashboard.supressDlpWarning">
                        </label>
                    </div>
                    <div>
                        <label class="checkbox">{{ _('Overlay dashboard in fullscreen (experimental)') }}
                            <input type="checkbox"
                                data-bind="checked: settingsViewModel.settings.plugins.dashboard.dashboardOverlayFull">
                        </label>
                    </div>
                </div>
            </div>

        </div>
    </div>
</form>